<?xml version="1.0" encoding="utf-8"?>
<window>
  <defaultcontrol>-</defaultcontrol>
  <controls>
    <control type="visualisation" id="2">
      <!-- FIX ME Music Visualization needs to have an id of 2 in this window to be able to lock or change preset -->
      <description>visualisation</description>
      <left>0</left>
      <top>0</top>
      <width>1280</width>
      <height>720</height>
    </control>
    <include>MusicBackground</include>
    <!-- the Album Cover -->
    <control type="image">
      <description>cover image</description>
      <left>0</left>
      <top>30</top>
      <width>500</width>
      <height>380</height>
      <texture fallback="DefaultAlbumCover.png">$INFO[Player.Art(thumb)]</texture>
      <aspectratio aligny="bottom">keep</aspectratio>
      <bordertexture border="8">ThumbShadow.png</bordertexture>
      <bordersize>8</bordersize>
    </control>
    <control type="group">
      <left>50</left>
      <top>160r</top>
      <control type="label" id="1">
        <description>Artist label</description>
        <left>20</left>
        <top>30</top>
        <width>910</width>
        <height>50</height>
        <align>left</align>
        <font>font35_title</font>
        <label>$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Album, - ]</label>
        <textcolor>orange</textcolor>
        <shadowcolor>black</shadowcolor>
      </control>
      <!-- the music title -->
      <control type="label">
        <width min="10" max="638">auto</width>
        <height>50</height>
        <font>font35_title</font>
        <align>left</align>
        <aligny>center</aligny>
        <label>$INFO[Player.Title]</label>
        <textcolor>orange</textcolor>
        <shadowcolor>black</shadowcolor>
        <scroll>true</scroll>
      </control>
    </control>
    <!-- the progress bar -->
    <control type="progress">
      <left>5</left>
      <top>75r</top>
      <description>Progressbar</description>
      <width>1270</width>
      <height>70</height>
      <info>Player.Progress</info>
      <texturebg border="6,6,6,6">OSDProgressBack.png</texturebg>
      <midtexture border="6,6,6,6" colordiffuse_off="$VAR[TextColor3]">OSDProgressMid.png</midtexture>
    </control>
    <!-- the duration label -->
    <control type="label">
      <left>0</left>
      <top>75r</top>
      <width>1280</width>
      <height>70</height>
      <font>font35_title</font>
      <align>center</align>
      <aligny>center</aligny>
      <label>$INFO[Player.Time(hh:mm:ss)] / $INFO[Player.Duration(hh:mm:ss)]</label>
      <textcolor>orange</textcolor>
      <shadowcolor>black</shadowcolor>
    </control>
  </controls>
</window>