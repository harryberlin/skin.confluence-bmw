      <texturefocus border="5">button-focus.png</texturefocus>
      <texturenofocus border="5">button-nofocus.png</texturenofocus>
      <!--Skip-->
      <onup>Seek(10)</onup>
      <ondown>Seek(-10)</ondown>
      <onleft>PlayerControl(Previous)</onleft>
      <onright>PlayerControl(Next)</onright>
      <!--Seeking-->
      <onclick>ActivateWindow(MusicOSD)</onclick>
    </control>
    <include>CommonBackground</include>
    <animation effect="fade" end="100" time="300" tween="quadratic" easing="out">WindowOpen</animation>
    <animation effect="fade" start="100" time="300" tween="quadratic" easing="out">WindowClose</animation>
    <control type="visualisation" id="2">
      <!-- FIX ME Music Visualization needs to have an id of 2 in this window to be able to lock or change preset -->
      <description>visualisation</description>
      <left>0</left>
      <top>0</top>
      <width>1280</width>
      <height>720</height>
    </control>
    <control_off type="image">
      <description>Fanart Image for Artist</description>
      <left>0</left>
      <top>0</top>
      <width>1280</width>
      <height>720</height>
      <aspectratio>scale</aspectratio>
      <texture background="true">$INFO[Player.Art(fanart)]</texture>
      <colordiffuse>AAFFFFFF</colordiffuse>
      <visible>!String.IsEmpty(Player.Art(fanart)) + !Skin.HasSetting(HideVisualizationFanart)</visible>
      <fadetime>600</fadetime>
    </control_off>
    <!-- media infos -->
    <control_off type="group">
      <depth>DepthOSD</depth>
      <animation effect="fade" time="150">VisibleChange</animation>
