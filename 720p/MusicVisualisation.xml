<?xml version="1.0" encoding="utf-8"?>
<window>
  <defaultcontrol>-</defaultcontrol>
  <controls>
    <control type="visualisation" id="2">
      <!-- FIX ME Music Visualization needs to have an id of 2 in this window to be able to lock or change preset -->
      <description>visualisation</description>
      <left>0</left>
      <top>0</top>
      <width>1280</width>
      <height>720</height>
    </control>
    <include>CommonBackground</include>
    <!-- the Album Cover -->
    <control type="image">
      <description>cover image</description>
      <left>20</left>
      <top>30</top>
      <width>450</width>
      <height>450</height>
      <texture fallback="DefaultAlbumCover.png">$INFO[Player.Art(thumb)]</texture>
      <bordertexture border="8">ThumbShadow.png</bordertexture>
      <bordersize>8</bordersize>
    </control>
    <control type="group">
      <left>20</left>
      <!-- the music title -->
      <control type="label">
        <top>230r</top>
        <width>1240</width>
        <height>50</height>
        <font>font55_title</font>
        <align>left</align>
        <label>$INFO[Player.Title]</label>
        <textcolor>$VAR[TextColor2]</textcolor>
        <shadowcolor>black</shadowcolor>
        <scroll>true</scroll>
      </control>
      <control type="label" id="1">
        <description>Artist label</description>
        <top>160r</top>
        <width>1240</width>
        <height>50</height>
        <align>left</align>
        <font>font35_title</font>
        <label>$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Album, - ]</label>
        <textcolor>$VAR[TextColor2]</textcolor>
        <shadowcolor>black</shadowcolor>
      </control>
    </control>
    <!-- the progress bar -->
    <control type="progress">
      <left>5</left>
      <top>75r</top>
      <description>Progressbar</description>
      <width>1270</width>
      <height>70</height>
      <info>Player.Progress</info>
      <texturebg border="6,6,6,6">OSDProgressBack.png</texturebg>
      <midtexture border="6,6,6,6" colordiffuse="$VAR[TextColor3]">OSDProgressMid.png</midtexture>
    </control>
    <!-- the duration label -->
    <control type="label">
      <left>0</left>
      <top>75r</top>
      <width>1280</width>
      <height>70</height>
      <font>font50_title</font>
      <align>center</align>
      <aligny>center</aligny>
      <label>$INFO[Player.Time(hh:mm:ss)] / $INFO[Player.Duration(hh:mm:ss)]</label>
      <textcolor>$VAR[TextColor2]</textcolor>
      <shadowcolor>black</shadowcolor>
    </control>
    <!--Clock-->
    <control type="group">
      <posx>210r</posx>
      <posy>0</posy>
      <animation effect="slide" start="0,0" end="-55,0" delay="0" time="300" condition="Player.Muted">conditional</animation>
      <animation effect="slide" start="0,0" end="210,0" delay="0" time="300" condition="Window.Next(Home) | Window.IsActive(Home) + ![Window.IsVisible(MovieInformation) | Window.IsVisible(MusicInformation)]">WindowClose</animation>
      <animation effect="slide" start="210,0" end="0,0" delay="0" time="300" condition="Window.Previous(Home) | Window.IsVisible(Home) + ![Window.IsVisible(MovieInformation) | Window.IsVisible(MusicInformation)]">WindowOpen</animation>
      <control type="image">
        <description>time background</description>
        <posx>160r</posx>
        <posy>0</posy>
        <width>260</width>
        <height>60</height>
        <texture flipx="true" border="32,0,0,0">bmw/header.png</texture>
      </control>
      <control type="label">
        <description>time label</description>
        <posx>5r</posx>
        <posy>0</posy>
        <width>170</width>
        <height>55</height>
        <align>right</align>
        <aligny>center</aligny>
        <font>font38_title</font>
        <textcolor>$VAR[TextColor1]</textcolor>
        <shadowcolor>black</shadowcolor>
        <label>$INFO[System.Time]</label>
      </control>
    </control>
  </controls>
</window>