          <top>180r</top>
          <width>1240</width>
          <height>50</height>
          <align>left</align>
          <font>font35_title</font>
          <label>$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Album, - ]</label>
          <textcolor>$VAR[TextColor2]</textcolor>
          <shadowcolor>black</shadowcolor>
          <scroll>true</scroll>
        </control>
        <control type="label">
          <animation effect="fade" end="100" time="300" tween="quadratic" easing="out" condition="!Window.IsVisible(MusicOSD)">conditional</animation>
