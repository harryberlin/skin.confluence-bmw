<?xml version="1.0" encoding="utf-8"?>
<window>
  <defaultcontrol always="true">3</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <onload>setfocus(3)</onload>
  <controls>
    <control type="button" id="3">
