          <textcolor>$VAR[TextColor2]</textcolor>
          <shadowcolor>black</shadowcolor>
          <scroll>true</scroll>
        </control>
      </control>
      <control type="group">
        <animation effect="zoom" start="100,100" end="100,60" time="100" condition="Window.IsVisible(MusicOSD)" center="0,500">conditional</animation>
