        <top>15</top>
        <width>120</width>
        <height>450</height>
        <align>left</align>
        <orientation>vertical</orientation>
        <itemgap>10</itemgap>
        <visible_off>Player.ShowInfo + !Player.ChannelPreviewActive + Window.IsActive(visualisation)</visible_off>
