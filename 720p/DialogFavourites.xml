<?xml version="1.0" encoding="utf-8"?>
<window type="dialog">
  <defaultcontrol always="true">450</defaultcontrol>
  <coordinates>
    <left>0</left>
    <top>0</top>
  </coordinates>
  <controls>
    <control type="group">
      <depth>DepthSideBlade</depth>
      <animation effect="slide" start="400,0" end="-400,0" time="300" tween="quadratic" easing="out">WindowOpen</animation>
      <animation effect="slide" start="-400,0" end="400,0" time="300" tween="quadratic" easing="out">WindowClose</animation>
      <control type="image">
        <left>400r</left>
        <top>0</top>
        <width>820</width>
        <height>720</height>
        <texture border="15,0,0,0" flipx="true">HomeBladeSub.png</texture>
      </control>
      <control type="button">
        <description>Close Window button</description>
        <left>380r</left>
        <top>0</top>
        <width>64</width>
        <height>32</height>
        <label>-</label>
        <font>-</font>
        <onclick>PreviousMenu</onclick>
        <texturefocus>DialogCloseButton-focus.png</texturefocus>
        <texturenofocus>DialogCloseButton.png</texturenofocus>
        <onleft>450</onleft>
        <onright>450</onright>
        <onup>450</onup>
        <ondown>450</ondown>
        <visible>system.getbool(input.enablemouse)</visible>
      </control>
      <control type="image">
        <left>370r</left>
        <top>30</top>
        <width>200</width>
        <height>200</height>
        <aspectratio align="center">keep</aspectratio>
        <fadetime>IconCrossfadeTime</fadetime>
        <texture>$INFO[ListItem.Icon]</texture>
        <bordertexture border="8">ThumbShadow.png</bordertexture>
        <bordersize>8</bordersize>
      </control>
      <control type="list" id="450">
        <left>390r</left>
        <top>250</top>
        <width>850</width>
        <height>360</height>
        <onup>450</onup>
        <onleft>Dialog.Close(Favourites)</onleft>
        <onright>450</onright>
        <ondown>450</ondown>
        <pagecontrol>-</pagecontrol>
        <scrolltime>200</scrolltime>
        <itemlayout height="60">
          <control type="image">
            <left>0</left>
            <top>0</top>
            <width>790</width>
            <height>60</height>
            <texture border="5">button-nofocus.png</texture>
          </control>
          <control type="label">
            <left>10</left>
            <top>-5</top>
            <width>770</width>
            <height>60</height>
            <font>font50_title</font>
            <align>left</align>
            <aligny>center</aligny>
            <selectedcolor>selected</selectedcolor>
            <info>ListItem.Label</info>
          </control>
        </itemlayout>
        <focusedlayout height="60">
          <control type="image">
            <left>0</left>
            <top>0</top>
            <width>790</width>
            <height>60</height>
            <visible>!Control.HasFocus(450)</visible>
            <texture_off border="0,2,0,2">MenuItemNF.png</texture_off>
            <texture border="3">button-nofocus.png</texture>
          </control>
          <control type="image">
            <left>0</left>
            <top>0</top>
            <width>790</width>
            <height>60</height>
            <visible>Control.HasFocus(450)</visible>
            <texture_off border="0,2,0,2">MenuItemFO.png</texture_off>
            <texture border="3">button-focus.png</texture>
          </control>
          <control type="label">
            <left>10</left>
            <top>-5</top>
            <width>770</width>
            <height>60</height>
            <font>font50_title</font>
            <textcolor_off>$VAR[TextColor2]</textcolor_off>
            <align>left</align>
            <aligny>center</aligny>
            <selectedcolor>selected</selectedcolor>
            <info>ListItem.Label</info>
          </control>
        </focusedlayout>
      </control>
      <control type="label">
        <description>Page label</description>
        <left>390r</left>
        <top>660</top>
        <width>790</width>
        <height>60</height>
        <align>center</align>
        <aligny>center</aligny>
        <font>font30_title</font>
        <textcolor>grey</textcolor>
        <label>([COLOR=blue]$INFO[Container(450).NumItems][/COLOR]) $LOCALIZE[31025] - $LOCALIZE[31024] ([COLOR=blue]$INFO[Container(450).CurrentPage]/$INFO[Container(450).NumPages][/COLOR])</label>
      </control>
      <control type="image">
        <left>50r</left>
        <top>220</top>
        <width>50</width>
        <height>30</height>
        <texture>scroll-up-focus.png</texture>
        <visible>Container(450).HasPrevious</visible>
      </control>
      <control type="image">
        <left>50r</left>
        <top>610</top>
        <width>50</width>
        <height>30</height>
        <texture>scroll-down-focus.png</texture>
        <visible>Container(450).HasNext</visible>
      </control>
    </control>
  </controls>
</window>